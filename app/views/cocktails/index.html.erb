<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.5)), url(https://images.unsplash.com/photo-1570821574759-c104ca40f7b4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80);">
  <div class="container">
    <div class="banner-title-box">
      <h1>Le Wagon Cocktail</h1>
      <p>Change your life, get buzzed.</p>
      <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-ghost" %>
    </div>
  </div>
</div>

<!-- <div class="content-divider"></div> -->

<div class="grid-container">
  <% @cocktails.each do |c| %>

    <%= link_to cocktail_path(c) do %>
  <!-- use user uploaded image or default for card background -->
      <% if c.photo.present? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(255,255,255,0.3), rgba(255,255,255,0.3)), url('<%= cl_image_path c.photo, crop: :fill %>')">
      <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(255,255,255,0.3), rgba(255,255,255,0.3)), url('https://upload.wikimedia.org/wikipedia/commons/thumb/1/14/Cocktail-glass.jpg/330px-Cocktail-glass.jpg')">
      <% end %>
        <h3><%= c.name %></h3>
      </div>
      <% end %>
    <% end %>

</div>
